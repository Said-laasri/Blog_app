<div class='d-flex'>
  <div class='img wid' >
    <img src=<%= @user.photo%> />
  </div>
  <div class='d-flex img'>
    <h1>User ID: <%= @user.id %> </h1>
    <h2 class='d-user'>Name: <%= @user.name %> </h2>
    <h3 class='d-count'>Number of posts:<%= @user.posts_counter%> </h3>
  </div>
</div>
<article class='bio'>
  <h4>Bio</h4>
  <p><%= @user.bio %> </p>
</article>
<% @user.recent_posts.each_with_index do |post, index| %>
    <div class='d-flex bio'>
    <a href='/users/<%= @user.id %>/posts'> <h3>Post # <%= index + 1 %></h3></a>
    <h4><%= post.text %></h4>
    <h5>Comments:<%= post.comments_counter %></h5>
    <h5>Likes:<%= post.likes_counter %></h5>
    </div>
<% end %> 

<button class='see'><%= link_to "See all Posts", user_posts_path(@user), {:class => "button_class"} %></button> 