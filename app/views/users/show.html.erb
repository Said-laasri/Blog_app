<h1>User ID: <%= @user.id %> </h1>
<h1>Name: <%= @user.name %> </h1>
<img src=<%= @user.photo%> />
<h3>Number of posts:<%= @user.posts_counter%> </h3>
<hr/>
<h4>Bio</h4>
<p><%= @user.bio %> </p>
<hr/>
<% @user.recent_posts.each_with_index do |post, index| %>
    <a href='/users/<%= @user.id %>/posts'> <h3>Post # <%= index + 1 %></h3></a>
    <h4><%= post.text %></h4>
    <h5>Comments:<%= post.comments_counter %></h5>
    <h5>Likes:<%= post.likes_counter %></h5>
    <hr/>
<% end %> 
<a href='/users/'><button>Go back</button></a>