<h1>User ID: <%= @user.id %> </h1>
<div class='d-flex'>
  <div class='img wid'>
    <img src=<%= @user.photo%> alt='user_image'/>
  </div>
  <div class='d-flex img'>
    <h2>Name: <%= @user.name %> </h2>
    <h3 class='d-user'>Number of posts:<%= @user.posts_counter%> </h3>
  </div>
</div>


<% @posts.each do |post| %>
  <div class='bio font'>
    <a href='/users/<%= @user.id %>/posts/<%= post.id %>'><%= post.id %>: <%= post.title%></a> 
    <div class='padd'>
      <h5>Comments: <%= post.comments_counter %></h5>
      <h5>Likes: <%= post.likes_counter %></h5>
    </div>

    <% post.comments.each do |comment| %>
      <h5><%= comment.author.name %>: <%= comment.text %> </h5>
    <% end %>
  </div>
<% end %>

<hr/>
<button>Pagination</button>
