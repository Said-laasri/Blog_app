<h1>User ID: <%= @user.id %> </h1>
<h1>Name: <%= @user.name %> </h1>
<img src=<%= @user.photo%> alt='user_image'/>
<h3>Number of posts:<%= @user.posts_counter%> </h3>
<hr/>
<% @posts = Post.where(author_id: @user.id)  %>
<% @posts.each do |post| %>
    <a href='/users/<%= @user.id %>/posts/<%= post.id %>'><h4>ID:<%= post.id %></h4></a> 
    <h4><%= post.text %></h4>
    <h5>Comments:<%= post.comments_counter %></h5>
    <h5>Likes:<%= post.likes_counter %></h5>
    <hr/>
    <% post.recent_comment.each do |comment| %>
      <h5><%= comment.author.name %>: <%= comment.text %> </h5>
    <% end %>
<% end %>
<hr/>
<button>Pagination</button>
